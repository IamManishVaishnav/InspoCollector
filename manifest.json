{
  "manifest_version": 3,
  "name": "Moodsy",
  "version": "1.0",
  "description": "Browser-based moodboard tool to capture, tag, and organize visual ideas",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png",
    "default_title": "Moodsy"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["moodboard.css", "moodboard-export.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
